<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <!--bootrap4-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!--bootsrap3-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/greet.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="container">
        <div class="main clearfix">
            <div class="content">
                <div class="app">
                    <h1>Greetings</h1><br><br>
                    <form action="/" method="post">
                        <div class="text-center">
                            <p id="reset" class="reset">{{resetmessage}}</p>
                            <p id="error" class="error">{{errorMsg}}</p>
                            <input class="input" type="text" placeholder="Your name.. " name="inputName" />
                            <span class="countNames">{{counts.count}}</span>

                            <p class="greet"> {{languageGreet}}{{name}}</p>


                        </div>
                        <div class="text-center">

                            <input type="radio" name="languageRadio" class="englishItemTypeRadio" value="English">
                            <label class="label-body">English</label>


                            <input type="radio" name="languageRadio" class="englishItemTypeRadio" value="Afrikaans">
                            <label class="label-body">Afrikaans</label>


                            <input type="radio" name="languageRadio" class="englishItemTypeRadio" value="isiZulu">
                            <label class="label-body">isiZulu</label>

                            <div class="d-flex justify-content-center">
                                <button class="btn-default btn btn-info" type="submit" name="button">greet Me!</button>


                                <form action="/reset" method="post">
                                    <a class="btn-default btn btn-primary resetButton" href="/reset" name="button"
                                        onclick="resetBtn()">Reset</a>
                                </form>
                                <script>
                                    function resetBtn() {
                                        let clearMessage = document.querySelector(".reset");
                                        
                                        setTimeout(function () {
                                            alert("You are about to clear all users?");
                                            clearMessage.innerHTML = "";

                                        }, 3000);
                                    }
                                </script>
                            </div>
                            <form>
                                <button class="btn-default btn btn-primary"><a href="/greeted">Users</a> </button>
                            </form>


                        </div>
                    </form>
                </div>
            </div>
            <script>
                let greetMessage = document.querySelector(".greet");
                let error = document.querySelector("#error");
                let reset = document.querySelector("#reset");

                setTimeout(function () {
                    greetMessage.innerHTML = "";
                    error.innerHTML = "";
                    reset.innerHTML = "";
                }, 3000);

            </script>
        </div>
    </div>
</body>

</html>