<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <!--bootrap4-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!--bootsrap3-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/greet.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="container">
        <div class="main clearfix">
            <div class="content">
                <div>
                    <h1>Greetings</h1><br><br>
                    <form action="/greet" method="post">
                        <div class="text-center">
                            <p id="reset" class="reset">{{resetmessage}}</p>
                            <p id="error" class="error">{{errorMsg}}</p>
                            <input class="input" type="text" placeholder="Your name.. " name="inputName" pattern="[A-Za-z]+" title="no numbers or special characters" size="50"/>
                            
                            <span class="countNames" value="nameCounts">{{counts}}</span>
                            <p class="greet">{{message}}</p>
                        </div>
                        <div class="text-center">
                            <label class="label-body">English</label>
                            <input type="radio" name="billItemType" class="englishItemTypeRadio" value="English">

                            <label class="label-body">Afrikaans</label>
                            <input type="radio" name="billItemType" class="englishItemTypeRadio" value="Afrikaans">

                            <label class="label-body">isiZulu</label>
                            <input type="radio" name="billItemType" class="englishItemTypeRadio" value="isiZulu">

                            <div class="d-flex justify-content-center">
                                <button class="btn-default btn btn-info" type="submit" name="button">greet Me!</button>
                                <button class="btn-default btn btn-primary resetButton" type="submit" name="button">Reset</button>
                            </div>
                            <form>
                                <a href="/greeted">Users</a><br>
                            </form>
                            
                            
                        </div>
                    </form>
                </div>
            </div>
            <script>
                let greetMessage = document.querySelector(".greet");
                let error = document.querySelector("#error");
                //let clearMessage = document.querySelector(".reset");
                let resetBtn = document.querySelector(".resetButton");

                setTimeout(function () {
                    greetMessage.innerHTML = "";
                    error.innerHTML = "";
                    //clearMessage.innerHTML = "";

                }, 3000);

            </script>
        </div>
    </div>
</body>

</html>